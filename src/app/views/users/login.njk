{% extends "layout.njk" %}

{% block content %}

<section class="user-login container form">
    <form action="/users/login" method="POST">
    
        <div class="header">
            <h3>Sign in</h3>
        </div>
        
        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div>
                    <input 
                    type="email"
                    name="email" 
                    value="{{user.email}}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Password</div>
                <div>
                    <input 
                    type="password"
                    name="password" 
                    >
                </div>
            </div>
        </div>

        <button class="button"type="submit">Sign in</button>
    
    </form>

    <div class="footer">
        <ul>
            <li>
                <a href="/users/register">Create your account</a>
            </li>
            <li>
                <a href="/users/forgot-password">Forgot your password?</a>
            </li>
        </ul>
    </div>

</section>

{% endblock content %}


