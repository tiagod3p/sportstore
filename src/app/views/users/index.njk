{% extends 'layout.njk' %}

{% block content %}

<section class="user-dashboard container form">
    <form action="/user/dashboard?_method=PUT" method="POST">
    
        <div class="header">
            <h3>Details</h3>
        </div>

        <div class="fields">
            {% include "users/fields.njk" %}
            <input type="hidden" name="id" value={{user.id}}>
        </div>

        <button class="button edit"type="submit">Save</button> 
    </form>

    <form action="/user/dashboard?_method=DELETE" method="post">
        <input type="hidden" name="id" value={{user.id}}>
        <button id="button_delete" class="button delete" type="submit">DELETE</button>
    </form>

</section>

<script>
const buttonDelete = document.querySelector('#button_delete')

buttonDelete.addEventListener('click', function(event) {
    const confirmation = confirm("Are you sure you want to delete this user?")

    if(!confirmation) {
        event.preventDefault()
    }
})

</script>

{% endblock %}