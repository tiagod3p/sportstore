{% extends "layout.njk" %}

{% block content %}

<section class="pass-recovery container form">
    <form action="/user/forgot-password" method="POST">
    
        <div class="header">
            <h3>Password assistance</h3>
        </div>
        
        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div>
                    <input 
                    type="email"
                    name="email" 
                    value="{{user.email}}"
                    >
                </div>
            </div>
        </div>


        <button class="button"type="submit">Continue</button>
    </form>
</section>

{% endblock content %}


