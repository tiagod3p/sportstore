<header>
    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>SportStore</h1>
                <h2>Buy the best jerseys</h2>
            </div>
        </a>

        <form action="/search" class="search" method="GET">
            <input 
            type="text"
            name="filter"
            placeholder="Search by product"
            {% if search.term %}
            value="{{search.term}}"
            {% endif %}
            >
        </form>

        <nav class="primary">
            <ul>
                <li>
                    <a href="/ads/add">
                        <i class="material-icons">add</i>
                        New announcement
                    </a>
                </li>
                <li class="dropdown-container">
                    <a href="/accounts">
                        <i class="material-icons">account_circle</i>
                        My account
                    </a>  
                    {% if session.userId %}
                    <ul class="dropdown">
                        <li>
                            <a href="/user/dashboard">My Account</a>
                        </li>
                        <li>
                            <a href="/orders/">My Orders</a>
                        </li>
                        <li>
                            <a href="/orders/sales">My Sales</a>
                        </li>
                        <li>
                            <a href="/user/ads">My Products</a>
                        </li>
                        <li>
                            <form action="/user/logout" method="POST">
                            <button type="submit">Sign out</button>
                            </form>
                        </li>
                    </ul> 
                    {% endif %}
                </li>
                <li class="cart">
                    <a href="/cart">
                        <i class="material-icons">
                            shopping_cart
                        </i>
                        {% if session.cart and session.cart.total.quantity > 0 %}
                            <span id="cart-status-info">{{session.cart.total.quantity}}</span>
                        {% endif %}
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>