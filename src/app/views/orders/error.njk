{% extends "layout.njk" %}
{% import "parts/card.njk" as card %}

{% block content %}

{%call card.render("", "order-error container")%}

    <div class="error-lottie"></div>
    <h2>OOPS! An error ocurred!</h2>
    <p>
        Your buy wasn't accepted. Please try again later!
    </p>
    <a href="#" onclick="history.back()">Return</a>

{% endcall %}

<script src="/lottie.min.js"></script>
<script>

    const element = document.querySelector('.error-lottie')

    lottie.loadAnimation({
        container: element, // the dom element that will contain the animation
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/error.json' // the path to the animation json
    })
</script>
{% endblock content %}